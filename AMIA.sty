% Make title
\makeatletter
\renewcommand{\maketitle}{
    \thispagestyle{empty}
    \bgroup\setlength{\parindent}{0pt}
    \begin{center}
        \vspace{-2em}
        \Large{\bfseries\@title}

        \renewcommand{\Authfont}{\large\bfseries}
        \renewcommand{\Affilfont}{\large\bfseries}
        \setlength{\affilsep}{0cm}
        \vspace{0.25cm}
        {\@author}

    \end{center}\egroup
}

\renewcommand\AB@affilsepx{\vspace{0.03cm}, \protect\Affilfont} % make affil as a line
\renewcommand\AB@authnote[1]{\textsuperscript{#1}} % change the font style for number
\renewcommand\AB@affilnote[1]{\textsuperscript{#1}} % change the font style for number
